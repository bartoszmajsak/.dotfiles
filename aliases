# General purpose aliases
alias setclip='xclip -selection c'
alias getclip='xclip -selection clipboard -o'
alias cat=bat
alias ls=exa
alias l="exa -lahF"

# dev aliases
alias noidea="rm -rf $(find . -type f -name '*.iml') && rm -rf .idea"

## k8s
alias i=istioctl
alias kubectl=kubecolor
alias crc-adm="oc login -u kubeadmin -p $(crc config get kubeadmin-password | tr -d ' ' | cut -d':' -f 2)"
